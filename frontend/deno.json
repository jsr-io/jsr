{
  "nodeModulesDir": "auto",
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check",
    "dev": "vite",
    "test": "deno test",
    "build": "vite build",
    "start": "deno run -A main.ts",
    "update": "deno run -A -r jsr:@fresh/update ."
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@/": "./",
    "@deno/gfm": "jsr:@deno/gfm@0.11",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "@orama/highlight": "npm:@orama/highlight@^0.1.8",
    "@orama/orama": "npm:@orama/orama@^2",
    "@oramacloud/client": "npm:@oramacloud/client@^1",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@std/fmt": "jsr:@std/fmt@^1.0.6",
    "@std/front-matter": "jsr:@std/front-matter@1",
    "@std/http": "jsr:@std/http@1",
    "@std/path": "jsr:@std/path@1",
    "@std/semver": "jsr:@std/semver@1",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
    "@viz-js/viz": "npm:@viz-js/viz@^3.11.0",
    "$imagescript": "jsr:@matmen/imagescript@1.3.1",
    "apexcharts": "npm:apexcharts@^4.5.0",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "marked-smartypants": "npm:marked-smartypants@1.1.6",
    "preact": "npm:preact@^10.27.2",
    "prismjs": "npm:prismjs@^1.29.0",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "tb-icons": "jsr:@preact-icons/tb@^1.0.12",
    "twas": "npm:twas@^2.1.3",
    "vite": "npm:vite@^7.1.3"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  }
}
